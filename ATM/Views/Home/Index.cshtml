        <tr>
            <td></td>
            <td>0</td>
            <td></td>
        </tr>
    </table>

    <table class="table_teclado">

        <tr>
            <td>Aceptar</td>
            <td>Limpiar</td>
            <td>Salir</td>

        </tr>
    </table>
    <script src="~/lib/jquery/jquery.min.js" type="text/javascript"></script>


    <script type="text/javascript">

        $(document).ready(function () {
            var contador = 0;
            $('#campo').val("ingrese   un número de tarjeta de 16 dígitos");
            $('.table_teclado tr td').click(function () {
                var number = $(this).text();
                if (number != "") {
                    if (contador == 0) {
                        $('#campo').val("");

                    }
                    contador = contador + 1;

                    if (number == "Limpiar") {
                        $('#campo').val("");
                        contador = 0;
                        $('#campo').val("ingrese   un número de tarjeta de 16 dígitos");

                    }
                    else if (number == "Aceptar")
                    {
                        //$.ajax({
                        //    url: "Home/VerificarTarjeta", data: { NroTarjeta: $('#campo').val() }
                        //}).done(function (data) {
                        //    alert(data);
                        //});
                        window.location.href = '/Home/VerifyCards?NumberCard=' + $('#campo').val();

                    }
                    else {
                        if (contador == 5) {
                            number = "-" + number
                            contador = 1;
                        }
                        if (number == '') {
                            $('#campo').val($('#campo').val().substr(0, $('#campo').val().length - 1)).focus();
                        }
                        else {
                            $('#campo').val($('#campo').val() + number).focus();
                        }
                    }
                }

            });
        });
    </script>
</div>
